pipeline {
    agent any

    stages {

        stage('Install Terraform') {
            steps {
                sh '''
                    echo "Installing Terraform..."

                    sudo yum install -y yum-utils
                    
                    sudo yum-config-manager \
                      --add-repo https://rpm.releases.hashicorp.com/AmazonLinux/hashicorp.repo

                    sudo yum -y install terraform

                    terraform -version
                '''
            }
        }

        stage('Install Git') {
            steps {
                sh '''
                    echo "Installing Git..."
                    sudo yum install git -y
                    git --version
                '''
            }
        }

        stage('Clone Repo') {
            steps {
                sh '''
                    echo "Cloning Your Repo..."
                    rm -rf Terraform-Zero-To-Hero || true
                    git clone https://github.com/AishwaryGathe/Terraform-Zero-To-Hero.git
                '''
            }
        }

        stage('Terraform Init') {
            steps {
                sh '''
                    cd Terraform-Zero-To-Hero/Day-1
                    terraform init
                '''
            }
        }

        stage('Terraform Plan') {
            steps {
                sh '''
                    cd Terraform-Zero-To-Hero/Day-1
                    terraform plan -out=tfplan
                '''
            }
        }

        stage('Terraform Apply') {
            steps {
                sh '''
                    cd Terraform-Zero-To-Hero/Day-1
                    terraform apply -auto-approve tfplan
                '''
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
